<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" 
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    
<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-start">Hola {{usuario}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n 
            <i class="fas fa-sign-out-alt" ></i></a></p>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Precios</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/precios/agregar"><i class="fa fa-plus" aria-hidden="true"></i>
            Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Productos</th>
                        <th scope="col">Tipo Producto</th>
                        <th scope="col">Precios</th>
                        <th scope="col">Tipo Precio</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each precios}}
                    <tr>
                        <th scope="row">{{id_producto}}</th>
                        <td>{{{imagen}}}</td>
                        <td>{{producto}}</td>
                        <td>{{tipo_producto}}</td>
                        <td>{{precio}}</td>
                        <td>{{tipo_precio}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/precios/editar/{{id_producto}}">
                            <i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/precios/eliminar/{{id_producto}}">
                            <i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

</body>